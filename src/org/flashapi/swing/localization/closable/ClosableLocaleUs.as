	*/
	
	/**
	 * 	The <code>ClosableLocaleUs</code> class is defines a constant value
	 * 	that can be used as English US alternate text for closing buttons.
	 * 
	 * 	<p>The <code>ClosableLocaleUs</code> class is the default class for the
	 * 	alternate text for closing buttons.</p>
	 * 
	 * 	@langversion ActionScript 3.0
	 * 	@playerversion Flash Player 9
	 * 	@productversion SPAS 3.0 alpha
	 */
	public class ClosableLocaleUs {
		
		//--------------------------------------------------------------------------
		//
		// Constructor
		//
		//--------------------------------------------------------------------------
		
		/**
		 * 	@private
		 * 
		 * 	Constructor.
		 */
		public function ClosableLocaleUs() {
			super();
		}
		
		//--------------------------------------------------------------------------
		//
		// Public constants
		//
		//--------------------------------------------------------------------------
		
		/**
		 * 	The alternate text for closing buttons.
		 */
		public static const CLOSE:String = "Close";
	}
}